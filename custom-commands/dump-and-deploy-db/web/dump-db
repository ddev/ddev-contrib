#!/bin/bash

## Description: dump MySQL/MariaDB on remote system table by table into ./data/sql/(records|struct)/ directories
## Usage: dump-db [options, call without params for help] â€¹target/sourceâ€º

endC="\033[0m"
#black="\033[0;30m"
#blackb="\033[1;30m"
white="\033[0;37m"
#whiteb="\033[1;37m"
red="\033[0;31m"
#redb="\033[1;31m"
green="\033[0;32m"
greenb="\033[1;32m"
yellow="\033[0;33m"
#yellowb="\033[1;33m"
#blue="\033[0;34m"
#blueb="\033[1;34m"
#purple="\033[0;35m"
purpleb="\033[1;35m"
#lightblue="\033[0;36m"
#lightblueb="\033[1;36m"

targetC=$green
successC=$greenb
errorC=$red

function usage() {
  printf "Usage: ddev dump-db [options] â€¹target/sourceâ€º\n"
  printf "  %s %s\n" "â€¹target/sourceâ€º" "Available targets/sources (from ./.ddev/commands/web/targets):"
  printf "\t%-15s   Â· $targetC%s$endC\n" "" "ddev (the local ddev database)"
  find "$targetDir" -type f -not -name README.txt -print0 |
    while IFS= read -r -d '' _i; do
      printf "\t%-15s   Â· $targetC%s$endC\n" "" "$(basename $_i)"
    done
  printf "  options:\n"
  printf "\t%-15s %s\n" "-y|--yes" "no question before data deletion"
  printf "\t%-15s %s\n" "-c|--creative" "use funny progress spinners"
  printf "\t%-15s %s\n" "-v|--verbose" "echo all executed commands"
}

function cursorBack() {
  echo -en "\033[$1D"
}

# global to keep its state
iSpinner=0
function spinner() {
  # make sure we use non-unicode character type locale
  # (that way it works for any locale as long as the font supports the characters)
  local LC_CTYPE=C

  local pid=$1 # Process Id of the previous running command

  if [ $isCreative == 0 ]; then
    spin="-\|/"
    local charwidth=1
  else
    declare -a spins
    local charwidth=3
    spins+=("â€‚â–â–‚â–ƒâ–„â–…â–†â–‡â–ˆâ–‰â–Šâ–‹â–Œâ–â–Žâ–â€‚â–â–Žâ–â–Œâ–‹â–Šâ–‰â–ˆâ–‡â–†â–…â–„â–ƒâ–‚â–")
    spins+=("â€‚â–”â–”â–€â–€â–ˆâ–ˆâ–â–â–•â–•â€‚â€‚â–•â–•â–â–â–ˆâ–ˆâ–€â–€â–”â–”")
    spins+=("â€‚â–â–‚â–ƒâ–„â–…â–†â–‡â–ˆâ–ˆâ–ˆâ–€â–”")
    spins+=('â—â—“â—‘â—’')
    spins+=('â â ‚â „â¡€â¢€â  â â ˆ')
    spins+=('â£¾â£½â£»â¢¿â¡¿â£Ÿâ£¯â£·')
    spins+=('â”¤â”˜â”´â””â”œâ”Œâ”¬â”')
    spins+=('â––â–˜â–â–—')
    spins+=('â—¢â—£â—¤â—¥')
    spins+=('â†â†–â†‘â†—â†’â†˜â†“â†™')
    spins+=('â—°â—³â—²â—±')
    spins+=('â—´â—·â—¶â—µ')
    spins+=("â€‚â–â–Žâ–â–Œâ–‹â–Šâ–‰â–ˆâ–‰â–Šâ–‹â–Œâ–â–Žâ–")
    spins+=("â€‚â–â–‚â–ƒâ–„â–…â–†â–‡â–ˆâ–‡â–†â–…â–„â–ƒâ–‚â–")
    spin=${spins[$(($RANDOM % ${#spins[@]}))]}
  fi

  tput civis # cursor invisible
  while kill -0 $pid 2>/dev/null; do
    iSpinner=$(((iSpinner + $charwidth) % ${#spin}))
    printf "$purpleb%s$endC" "${spin:$iSpinner:$charwidth}"

    cursorBack 1
    sleep .1
  done
  tput cnorm
  wait $pid # capture exit code
  return $?
}

function shutdown() {
  if [ $isDumpDdev == 0 ]; then
    # this would allow short running mysqldumps to finish before we shut off the line
    sleep 1
    printf "\nClosing tunnel â€¦"
    # we ignore the actual result because it might already be closed
    pkill -TERM -f "^ssh -f"
    cursorBack 1
    printf "${successC}âœ“${endC}\n"
  fi
  printf "\n"
  tput cnorm # reset cursor
}

function parseArgs() {
  # -allow a command to fail with !â€™s side effect on errexit
  # -use return value from ${PIPESTATUS[0]}, because ! hosed $?
  ! getopt --test >/dev/null
  if [[ ${PIPESTATUS[0]} -ne 4 ]]; then
    echo $errorC'`getopt --test` failed in this environment.'$endC
    exit 1
  fi

  OPTIONS="ycv"
  LONGOPTS="yes,creative,verbose"

  # -regarding ! and PIPESTATUS see above
  # -temporarily store output to be able to check for errors
  # -activate quoting/enhanced mode (e.g. by writing out â€œ--optionsâ€)
  # -pass arguments only via   -- "$@"   to separate them correctly
  ! PARSED=$(getopt --options=$OPTIONS --longoptions=$LONGOPTS --name "$0" -- "$@")
  if [[ ${PIPESTATUS[0]} -ne 0 ]]; then
    # e.g. return value is 1
    #  then getopt has complained about wrong arguments to stdout
    usage
    exit 2
  fi
  # read getoptâ€™s output this way to handle the quoting right:
  eval set -- "$PARSED"

  while true; do
    case "$1" in
    -y | --yes)
      isForce=1
      shift
      ;;
    -c | --creative)
      isCreative=1
      shift
      ;;
    -v | --verbose)
      isVerbose=1
      shift
      ;;
    --)
      shift
      break
      ;;
    *)
      targetName="$1"
      usage
      exit 3
      ;;
    esac
  done

  # handle non-option arguments
  if [[ $# -ne 1 ]]; then
    usage
    exit 4
  fi
  targetName="$1"

  if [ "$targetName" == "ddev" ]; then
    isDumpDdev=1
  else
    # read target config
    if ! . "$targetDir"/"$targetName" 2>/dev/null; then
      printf "${errorC}Target/source â€¹$targetC%s$errorCâ€º not found.$endC\n" "$targetName"
      usage
      exit 3
    fi
  fi
}

function deleteData() {
  # delete existing data
  if [ $isForce == 0 ]; then
    while true; do
      printf "This will delete all existing files in â€¹./data/sql/recordsâ€º and â€¹./data/sql/structâ€º!\n"
      read -p "Are you sure? [y/n] " yn
      case $yn in
      [Yy]*) break ;;
      [Nn]*) exit 130 ;;
      *) echo "${errorC}Please answer y or n.$endC" ;;
      esac
    done
  fi

  printf "\nDeleting existing files in â€¹./data/sql/recordsâ€º and â€¹./data/sql/structâ€º â€¦"
  rm -rf "$structDir" &>/dev/null
  rm -rf "$dataDir" &>/dev/null
  mkdir -p $structDir
  mkdir -p $dataDir
  cursorBack 1
  printf "${successC}âœ“${endC}\n\n"
}

function openTunnel() {
  if [ $isDumpDdev == 1 ]; then
    target=(
      [mysqlHost]=db
      [mysqlPort]=3306
      [mysqlUser]=db
      [mysqlPass]=db
      [mysqlDatabase]=db
      # TODO: make configurable
      [ignoredDbTablesPattern]="^(sys_log|.*_sessions|cf_.*|.*cache.*|sys_file_processedfile|sys_refindex|sys_lockedrecords|tx_realurl_urldata|index_debug|index_fulltext|index_grlist|index_phash|index_rel|index_section|index_stat_search|index_stat_word|index_words|tx_crawler_queue|tx_extensionmanager_domain_model_extension)$"
    )

    mysqlConnectString="--host=${target[mysqlHost]} --protocol=TCP --port=${target[mysqlPort]} --user=${target[mysqlUser]@Q} --password=${target[mysqlPass]@Q}"
  else
    printf "Opening tunnel (provide a password or use â€¹ddev auth sshâ€º to provide a private key) â€¦ "

    if [ -z "${target[sshPrivKey]}" ]; then
      sshIdentitiyArg=
    else
      sshIdentitiyArg="-i \"/var/www/html/${target[sshPrivKey]}\""
    fi
    localMysqlPort=33060

    # remotely use socket or port?
    if [ -n "${target[mysqlSocket]:-}" ]; then
      sshCommand="ssh -f -N -o LogLevel=ERROR -p ${target[sshPort]} $sshIdentitiyArg ${target[sshUser]}@${target[sshHost]} -L 127.0.0.1:$localMysqlPort:${target[mysqlSocket]}"
    else
      sshCommand="ssh -f -N -o LogLevel=ERROR -p ${target[sshPort]} $sshIdentitiyArg ${target[sshUser]}@${target[sshHost]} -L 127.0.0.1:$localMysqlPort:${target[mysqlHost]}:${target[mysqlPort]}"
    fi

    if eval $sshCommand; then
      cursorBack 2
      printf "${successC}âœ“${endC}\n"
    else
      cursorBack 2
      printf "${errorC}ðŸž©${endC} - if you are trying to connect with a key, did you insert it to ddev (â€¹ddev auth sshâ€º)? \n"
      exit 1
    fi

    mysqlConnectString="--host=127.0.0.1 --protocol=TCP --port=$localMysqlPort --user=${target[mysqlUser]@Q} --password=${target[mysqlPass]@Q}"
  fi
  trap shutdown EXIT

  mysqlCommand="mysql $mysqlConnectString --default-character-set=utf8mb4 ${target[mysqlDatabase]@Q}"
  mysqldumpCommand="mysqldump $mysqlConnectString --default-character-set=utf8mb4 --insert-ignore --skip-comments --quote-names ${target[mysqlDatabase]@Q}"
}

function gatherTables() {
  tablesCommand="$mysqlCommand --skip-column-names --batch -e \"SHOW TABLES;\""

  printf "Gathering tables â€¦"
  tables="$(eval $tablesCommand)"
  if [ $? -ne 0 ]; then
    cursorBack 1
    printf "${errorC}ðŸž©${endC}\n"
    echo "Could not gather tables"
    exit 1
  fi
  cursorBack 1
  printf "${successC}âœ“${endC}\n"
}

function dumpStruct() {
  _structFile="$structDir/$T.sql"
  _dumpTableStructCommand="$mysqldumpCommand --no-data --add-drop-table --add-locks --create-options --quick --lock-tables --set-charset --quote-names $T --result-file=${_structFile@Q} 2> /dev/null"
  eval "$_dumpTableStructCommand&"
  if ! spinner $!; then
    printf "${errorC}ðŸž©${endC}\n"
    printf "Unsuccessful struct dump\n"
    exit 1
  fi
  printf "${successC}âœ“${endC}         |"
}

function dumpData() {
  printf " "
  _dataFile="$dataDir/$T.sql"
  _dumpTableDataCommand="$mysqldumpCommand --order-by-primary --quick --lock-tables --set-charset --add-locks --no-create-info --skip-complete-insert --skip-extended-insert --disable-keys --quote-names --no-autocommit $T --result-file=${_dataFile@Q} 2> /dev/null"
  eval "$_dumpTableDataCommand&"
  if ! spinner $!; then
    echo $?
    printf "${errorC}ðŸž©${endC}\n"
    printf "Unsuccessful data dump\n"
    exit 1
  fi
  printf "${successC}âœ“${endC}    (%s)\n" "$(du --apparent-size --human-readable $_dataFile | cut -f1)"
}

# saner programming env: these switches turn some bugs into errors
set -o errexit -o pipefail -o noclobber -o nounset

# init
targetDir=$(dirname "$0")/targets
structDir="/var/www/html/data/sql/struct"
dataDir="/var/www/html/data/sql/records"

# arguments
isForce=0
isVerbose=0
isDumpDdev=0
isCreative=0
targetName=
typeset -A target

parseArgs "$@"

if [ $isVerbose == 1 ]; then
    set -x
fi


deleteData

openTunnel

gatherTables

nTables=$(echo $tables | wc -w)
printf "${white}Dumping %d tables â€¦${endC}\n" "$nTables"

printf "%${#nTables}s %${#nTables}s | %50s | %9s | %16s\n" "" "" "table" "structure" "data (I=ignored by config)"
printf "%100s\n" " " | tr " " "-"

declare -i _i=0
for T in $tables; do
  _i+=1
  printf "$white%${#nTables}d/%d$endC |" $_i $nTables
  printf " %50s | " "$T"

  # skip completely?
  if [ ! -z "${target[fullyIgnoredDbTablesPattern]-}" ]; then
    if [[ "$T" =~ ${target[fullyIgnoredDbTablesPattern]-} ]]; then
      printf "${yellow}I$endC         |"
      printf " ${yellow}I$endC\n"
      continue
    fi
  fi

  dumpStruct

  # skip data dump?
  if [ ! -z "${target[ignoredDbTablesPattern]-}" ]; then
    if [[ "$T" =~ ${target[ignoredDbTablesPattern]-} ]]; then
      printf " ${yellow}I$endC\n"
      continue
    fi
  fi

  dumpData
done

printf "\nFinished. Dumped all data to â€¹./data/sql/recordsâ€º and â€¹./data/sql/structâ€º (%s)\n" "$(du --apparent-size --human-readable $dataDir | cut -f1)"
printf "To import into ddev, use \n\tâ€¹ddev deploy-db ddevâ€º\n"
